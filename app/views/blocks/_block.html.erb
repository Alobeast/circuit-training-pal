<%= turbo_frame_tag block do %>
  <div class="block">
    <div class="block__header">
      <h2 class="block__title">
        <%= block.name %>
      </h2>

      <div class="block__actions">
        <%= button_to "Delete",
                      [session, block],
                      method: :delete,
                      class: "btn btn--light link",
                      form: { data: { turbo_confirm: "Are you sure?" } } %>
        <%= link_to "Edit",
                    [:edit, session, block],
                    class: "btn btn--light link" %>
      </div>
    </div>
  </div>
<% end %>
